{
  "devDependencies": {
    "npm-pkgbuild": "^11.10.6",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/commit-analyzer": "^10.0.1",
    "@semantic-release/release-notes-generator": "^11.0.4"
  },
  "pkgbuild": {
    "content": {}
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue --publish dist"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "any Debian Package"
            },
            {
              "path": "dist/*any.pkg.*",
              "label": "any Arch Linux Package"
            },
            {
              "path": "dist/*x86_64.pkg.*",
              "label": "x86_64 Arch Linux Package"
            },
            {
              "path": "dist/*aarch64.pkg.*",
              "label": "arm64 Arch Linux Package"
            },
            {
              "path": "dist/*noarch.rpm",
              "label": "noarch RPM"
            },
            {
              "path": "dist/*x86_64.rpm",
              "label": "x86_64 RPM"
            },
            {
              "path": "dist/*aarch64.rpm",
              "label": "arm64 RPM"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "usedBy": [
      "Kronos-Integration/svelte-components",
      "arlac77/mf-styling",
      "arlac77/npm-dep-graph",
      "arlac77/svelte-command",
      "arlac77/svelte-common",
      "arlac77/svelte-entitlement",
      "arlac77/svelte-guard-history-router",
      "arlac77/svelte-repository-provider",
      "arlac77/svelte-time-series",
      "arlac77/template-kronos-app",
      "arlac77/template-web-app",
      "konsumation/frontend-svelte",
      "konsumation/konsum",
      "template-tools/template-sync-hook"
    ]
  }
}
