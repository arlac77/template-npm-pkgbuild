{
  "devDependencies": {
    "npm-pkgbuild": "^10.15.1",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/release-notes-generator": "^10.0.3"
  },
  "pkgbuild": {
    "content": {}
  },
  "release": {
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/exec",
        {
          "publishCmd": "npx npm-pkgbuild --available --continue"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/*.deb",
              "label": "Debian Package"
            },
            {
              "path": "dist/*.pkg.*",
              "label": "Arch Linux Package"
            }
          ]
        }
      ]
    ]
  },
  "template": {
    "usedBy": [
      "Kronos-Integration/svelte-components",
      "arlac77/mf-examples",
      "arlac77/mf-styling",
      "arlac77/npm-dep-graph",
      "arlac77/svelte-command",
      "arlac77/svelte-common",
      "arlac77/svelte-entitlement",
      "arlac77/svelte-guard-history-router",
      "arlac77/svelte-repository-provider",
      "arlac77/svelte-time-series",
      "arlac77/template-kronos-app",
      "arlac77/template-web-app",
      "konsumation/frontend-svelte",
      "konsumation/konsum",
      "template-tools/template-sync-hook"
    ]
  }
}
